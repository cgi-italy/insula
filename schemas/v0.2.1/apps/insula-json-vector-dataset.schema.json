{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cgi-italy.github.io/insula/schemas/v0.2.0/apps/insula-json-vector-dataset.schema.json",
  "title": "Insula vector dataset",
  "description": "Insula JSON vector dataset configuration",
  "type": "object",
  "allOf": [
    {
      "$ref": "../common/platform-collection.schema.json#/$defs/platformVectorCollection"
    },
    {
      "type": "object",
      "title": "Vector layer configuration",
      "description": "Geoserver vector layer information",
      "properties": {
        "featureTypeName": {
          "type": "string",
          "title": "Feature typename",
          "description": "The WFS feature type name"
        },
        "timeDynamicData": {
          "$ref": "./insula-vector-dataset-time-dynamic-data.schema.json"
        }
      },
      "required": [
        "featureTypeName"
      ]
    }
  ]
}